generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Order {
  id Int @id @default(autoincrement())
  table String
  createdAt DateTime @default(now())
  totalPrice Float
  items OrderItems[]
}

model OrderItems {
  id Int @id @default(autoincrement())
  itemName String
  price Float
  count Int
  category String
  orderId Int
  order Order @relation(fields: [orderId], references: [id])
}
